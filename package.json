{
  "name": "webpack-recompilation-simulator",
  "version": "3.1.0",
  "description": "Helper to test and measure webpack recompilations",
  "files": [
    "src/"
  ],
  "main": "src/index.js",
  "scripts": {
    "prepublishOnly": "npm run test",
    "pre": "semistandard src/**/*.js test/**/*.js",
    "release": "standard-version",
    "test": "mocha --timeout 15000",
    "posttest": "tsc -p tsconfig.json",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jantimon/webpack-recompilation-simulator.git"
  },
  "author": "Jan Nicklas",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "5.2.4",
    "@types/node": "8.0.0",
    "chai": "^4.1.2",
    "commitizen": "2.10.1",
    "cz-conventional-changelog": "2.1.0",
    "mocha": "^5.2.0",
    "semistandard": "^12.0.1",
    "standard-version": "4.4.0",
    "typescript": "2.9.1",
    "webpack": "^4.14.0"
  },
  "dependencies": {
    "temp-fs": "^0.9.9"
  },
  "peerDependencies": {
    "webpack": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
